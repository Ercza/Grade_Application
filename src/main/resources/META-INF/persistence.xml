<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="school" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>Utils.NotesEntity</class>
        <class>Utils.StudentsEntity</class>
        <class>Utils.SubjectsEntity</class>
        <class>Utils.TeachersEntity</class>
        <class>Utils.LoginEntity</class>
        <class>Utils.AbsencesEntity</class>
        <class>Utils.AttentionsEntity</class>
        <class>Utils.NewsEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/school?serverTimezone=UTC"/>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/school"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/school"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/school"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/school"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>


        </properties>
    </persistence-unit>

</persistence>