<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Teacher.TeacherMarksController">
   <children>
      <VBox prefHeight="600.0" prefWidth="1000.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <TableView fx:id="teacher_subject_table_view" prefHeight="347.0" prefWidth="1000.0">
              <columns>
                  <TableColumn fx:id="teacher_mark_id_column" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="teacher_mark_name_column" prefWidth="75.0" text="Nazwa" />
                <TableColumn fx:id="teacher_mark_teacherID_column" prefWidth="75.0" text="ID Nauczyciela" />
                  <TableColumn fx:id="teacher_mark_studentID_column" prefWidth="75.0" text="ID Ucznia" />
                  <TableColumn fx:id="teacher_markID_column" prefWidth="75.0" text="ID Oceny" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" prefHeight="116.0" prefWidth="1000.0" spacing="50.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="ID" />
                        <TextField fx:id="teacher_subject_text_field_id" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Nazwa" />
                        <TextField fx:id="teacher_subject_text_field_name" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="ID  Nauczyciela" />
                        <TextField fx:id="teacher_subject_text_field_teacherID" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="ID Ucznia" />
                        <TextField fx:id="teacher_subject_text_field_studentID" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="ID Oceny" />
                        <TextField fx:id="teacher_subject_text_field_markID" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Button fx:id="teacher_subject_button_add" mnemonicParsing="false" onAction="#addSubject" text="Dodaj" />
                  <Button fx:id="teacher_subject_button_update" mnemonicParsing="false" onAction="#updateSubject" text="Aktualizuj" />
                  <Button fx:id="teacher_subject_button_delete" mnemonicParsing="false" onAction="#deleteSubject" text="Usuń" />
                  <Button fx:id="teacher_subject_button_search" mnemonicParsing="false" onAction="#searchSubject" text="Szukaj po ID" />
                  <Button fx:id="teacher_mark_button_refresh" mnemonicParsing="false" onAction="#searchSubjects" text="Odśwież" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
